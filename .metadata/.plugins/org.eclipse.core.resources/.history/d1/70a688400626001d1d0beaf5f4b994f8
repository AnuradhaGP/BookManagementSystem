package com.team3.bookmanagement.service.impl;

import java.security.cert.PKIXRevocationChecker.Option;
import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import com.team3.bookmanagement.dto.BookDTO;
import com.team3.bookmanagement.entity.Book;
import com.team3.bookmanagement.repository.BookRepo;
import com.team3.bookmanagement.service.BookService;

public class BookServiceImpl implements BookService{
	@Autowired
	private BookRepo bookRepo;

	@Override
	public String createBook(BookDTO dto) {
		Book book = new Book(dto.getId(),dto.getName(),dto.getDescription(),dto.getAuthor(),dto.getPrice());
		return bookRepo.save(book).getName()+" Added Successfully!";
	}

	@Override
	public BookDTO getBook(String name) {
		Book b = bookRepo.findByName(name);
		if(b!= null) {
			return new BookDTO(b.getId(),b.getName(),b.getDescription(),b.getAuthor(),b.getPrice());
		}
		return null;
	}

	@Override
	public List<BookDTO> getAllBook() {
		List<BookDTO> list = new ArrayList<>();
		bookRepo.findAll().forEach(b->{
			list.add(new BookDTO(b.getId(),b.getName(),b.getDescription(),b.getAuthor(),b.getPrice()));
		});
		return list;
	}

	@Override
	public String updateBook(Long id) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public String deleteBook(Long id) {
		// TODO Auto-generated method stub
		return null;
	}

}
